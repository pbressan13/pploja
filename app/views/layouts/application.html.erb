<!DOCTYPE html>
<html>
  <head>
    <title>Loja</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <%= nav_bar brand: "PPLoja", brand_link: root_url do %>
        <%= menu_group do %>
          <%= menu_item "Inserir Produto", new_produto_path	%>
          <%= menu_item "Departamentos", departamentos_path	%>
        <% end %>
        <%= form_tag search_produto_path, method: :get, class:"navbar-form navbar-right" do %>
          <div class="form-group">
            <%= text_field_tag :nome, @nome, class:"form-control"  %>
            <%= button_to  "Buscar", nil, class:"btn btn-default btn-rounded btn-sm my-0" %>
          </div>
        <% end %>
      <% end %>
        <div class="container">
          <%= yield %>
        </div>
  </body>
</html>
